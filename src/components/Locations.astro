    {
        name: "Santa Br√≠gida",
        iframe: `<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d256.7578423734876!2d-15.499270566685619!3d28.034708442780058!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xc409786f16e9513%3A0x79243616a00a8a97!2sVitraining%20Santa%20Br%C3%ADgida!5e0!3m2!1ses!2ses!4v1750621816778!5m2!1ses!2ses" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>`,
    },
    {
        name: "San Mateo",
        iframe: `<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1345.0871620947462!2d-15.529916035536152!3d28.01002673366709!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xc40914324bfac05%3A0xe4fc5806e46ca762!2sVitraining%20San%20Mateo!5e0!3m2!1ses!2ses!4v1750621829630!5m2!1ses!2ses" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>`,
    },
];
---

<section id="locations" class="py-16 md:py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2
            class="text-3xl md:text-4xl font-bold text-center text-gray-900 mb-12"
        >
            Nuestras Ubicaciones
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12">
            {
                locations.map((location) => (
                    <div class="location-card">
                        <h3 class="text-2xl font-bold text-center text-[#ce2c3b] mb-4">
                            {location.name}
                        </h3>
                        <div class="map-container" set:html={location.iframe} />
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .location-card {
        background-color: white;
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow:
            0 10px 15px -3px rgb(0 0 0 / 0.1),
            0 4px 6px -4px rgb(0 0 0 / 0.1);
    }
    .map-container {
        border-radius: 0.5rem;
        overflow: hidden;
        /* Aspect ratio for responsive iframe */
        position: relative;
        padding-bottom: 75%; /* 4:3 aspect ratio */
        height: 0;
    }
    .map-container :global(iframe) {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
</style>

