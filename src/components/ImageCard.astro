---
// import { Image } from "astro:assets";
// import type { ImageMetadata } from "astro";

interface Props {
  image: string;
  title: string;
  description: string;
}

const { image, title, description } = Astro.props;
---

<div class="flip-card">
  <div class="flip-card-inner">
    <div class="flip-card-front">
      <img
        src={`${image}-320w.webp`}
        srcset={`
          ${image}-320w.webp 320w,
          ${image}-640w.webp 640w,
          ${image}-1280w.webp 1280w
        `}
        sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
        alt={title}
        width="600"
        height="400"
        class="absolute inset-0 w-full h-full object-cover z-0"
        loading="lazy"
        decoding="async"
      />
      <div class="overlay"></div>
      <h2 class="card-title">{title}</h2>
    </div>
    <div class="flip-card-back">
      <p class="text-lg font-semibold">{description}</p>
    </div>
  </div>
</div>

<style>
  .flip-card {
    background-color: transparent;
    width: 100%;
    height: 384px;
    perspective: 1000px;
  }

  .flip-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    transition: transform 0.6s;
    transform-style: preserve-3d;
    transform-origin: center center; /* Asegura el origen de la transformación */
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    border-radius: 10px;
    transform: translateZ(0); /* Fuerza aceleración de hardware */
  }

  .flip-card:hover .flip-card-inner {
    transform: rotateY(180deg);
  }

  .flip-card-front,
  .flip-card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    border-radius: 10px;
    overflow: hidden;
    transform: translateZ(0); /* Fuerza aceleración de hardware */
  }

  /* FRONT FACE STYLING */
  .flip-card-front {
    position: absolute; /* Changed from relative to absolute */
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
  }

  .flip-card-front .overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1; /* Ensure overlay is above the image but below text */
  }

  .flip-card-front .card-title {
    position: relative; /* To appear above the overlay */
    z-index: 2; /* Ensure title is above the overlay */
    font-family: "Anton", "sans-serif";
    font-size: 1.75rem; /* 28px */
    text-transform: uppercase;
    font-style: italic;
    padding: 1rem;
    text-align: center;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .flip-card-front.variant-yoga {
    background-position: top;
  }

  /* BACK FACE STYLING */
  .flip-card-back {
    background-color: #ce2c3b;
    color: white;
    transform: rotateY(180deg);
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }
</style>
