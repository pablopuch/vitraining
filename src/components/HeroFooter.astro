---
interface Props {
  callToAction: string;
}

const { callToAction } = Astro.props;
const imageURL = "logo_fodo_rojo.jpg";
const bgStyle = { backgroundImage: `url('/images/${imageURL}')` };
const content = [
  {
    heading: "Teléfono",
    info: "664.635.129",
  },
  {
    heading: "Email",
    info: "info@vitraining.com",
  },
];
