---
interface Props {
  callToAction: string;
}

const { callToAction } = Astro.props;
const imageURL = "logo_fodo_rojo.webp";
const bgStyle = { backgroundImage: `url('/images/${imageURL}')` };
const content = [
  {
    heading: "Tel√©fono",
    info: "654 63 51 29",
