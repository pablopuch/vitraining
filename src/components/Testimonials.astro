---
import TestimonialsSwiper from "./TestimonialsSwiper.jsx";
---

<section class="py-12 bg-gray-50 text-gray-800">
  <h1
    class="text-[#ce2c3b] text-4xl md:text-5xl italic uppercase text-center mb-12"
  >
    Rese√±as
  </h1>

  <TestimonialsSwiper client:visible />
</section>

<style is:global>
  .testimonial {
    max-width: 600px;
    margin: auto;
    text-align: center;
    padding: 40px 20px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    min-height: 320px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .testimonials-swiper {
    padding-bottom: 50px;
  }

  .swiper-pagination-bullet {
    background: #d1d5db;
    opacity: 1;
    transition: background-color 0.3s;
  }

  .swiper-pagination-bullet-active {
    background: #ce2c3b;
  }

  .swiper-pagination {
    position: relative;
    bottom: 0;
    margin-top: 20px;
  }

  .swiper-button-next,
  .swiper-button-prev {
    color: #ce2c3b;
    transform: scale(0.8);
    transition: color 0.3s;
  }

  .swiper-button-next:hover,
  .swiper-button-prev:hover {
    color: #a81f2a;
  }

  /* Hide navigation arrows on mobile */
  @media (max-width: 767px) {
    .swiper-button-next,
    .swiper-button-prev {
      display: none;
    }
  }
</style>
