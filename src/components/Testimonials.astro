  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 mb-12">
      Lo que dicen nuestros clientes
    </h2>
    <TestimonialsSwiper client:visible />
  </div>
</section>

<script>
